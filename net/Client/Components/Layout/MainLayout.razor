@inherits LayoutComponentBase

<NavBar/>

<main class="flex-grow-1">
    @Body
</main>

<PageFooter/>

<div id="blazor-error-ui" class="toast-container p-3 bottom-0 end-0">
    <div class="toast bg-danger-subtle" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
            <span class="me-auto">An unhandled error has occurred.</span>
            <button type="button" class="btn-close dismiss" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body">
            <a href="" class="btn btn-sm btn-danger reload">Reload</a>
        </div>
    </div>
</div>
